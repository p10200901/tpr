{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newVMName": {
      "type": "string",
      "defaultValue": "TPR"
    },
    "size": {
      "type": "string",
      "defaultValue": "Standard_B2s"
    },
    "userName": {
      "type": "string",
      "defaultValue": "tpr_admin"
    },
    "password": {
      "type": "securestring",
      "defaultValue": "[[[adminpassword]]"
    },
    "availabilitySetName": {
      "type": "string",
      "defaultValue": "CRM"
    }
  },
  "variables": {
    "labSubnetName": "LAN",
    "labVirtualNetworkId": "[resourceId('Microsoft.Compute/virtualnetworks', parameters('labName'), variables('labVirtualNetworkName'))]",
    "labVirtualNetworkName": "TPR__SIT__2",
    "vmId": "[resourceId ('Microsoft.Compute/virtualmachines', parameters('labName'), parameters('newVMName'))]",
    "vmName": "[concat(parameters('labName'), '/', parameters('newVMName'))]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
            "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
            "notes": "Windows Server 2008 R2 SP1",
            "galleryImageReference": {
            "offer": "WindowsServer",
            "publisher": "MicrosoftWindowsServer",
            "sku": "2008-R2-SP1",
            "osType": "Windows",
            "version": "latest"
            },
            "size": "[parameters('size')]",
            "userName": "[parameters('userName')]",
            "password": "[parameters('password')]",
            "isAuthenticationWithSshKey": false,
            "labSubnetName": "[variables('labSubnetName')]",
            "disallowPublicIpAddress": true,
            "storageType": "Standard",
            "allowClaim": false,
            "availabilitySet": {
                "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
            }

        }
    }
  ],
  "outputs": {
    "labVMId": {
      "type": "string",
      "value": "[variables('vmId')]"
    }
  }
}
